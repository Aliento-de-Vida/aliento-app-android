<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashscreen_navigation"
    app:startDestination="@id/fragment_splashscreen">

    <fragment
        android:id="@+id/fragment_splashscreen"
        android:name="com.alientodevida.alientoapp.ui.splashscreen.SplashscreenFragment"
        android:label="@string/title_splashscreen"
        tools:layout="@layout/fragment_splashscreen">
        <action
            android:id="@+id/action_fragment_splashscreen_to_mobile_navigation"
            app:destination="@id/mobile_navigation"
            app:popUpTo="@id/splashscreen_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <include app:graph="@navigation/mobile_navigation" />

</navigation>