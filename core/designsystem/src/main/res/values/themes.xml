<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme specific-->
    <style name="Theme.AlientoApp" parent="Base.Theme.AlientoApp">

        <item name="colorPrimary">@color/pantone_2199_c</item>
        <item name="colorPrimaryVariant">@color/pantone_663_c</item>
        <item name="colorOnPrimary">@color/pantone_black_c</item>

        <item name="colorSecondary">@color/pantone_white_c</item>
        <item name="colorSecondaryVariant">@color/pantone_white_c</item>
        <item name="colorOnSecondary">@color/pantone_black_c</item>

        <item name="colorSurface">@color/pantone_white_c</item>
        <item name="colorOnSurface">@color/pantone_black_c</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/pantone_black_c</item>

        <item name="colorOnError">@color/pantone_white_c</item>
        <item name="colorError">@color/pantone_black_c</item>

        <item name="themed_icon">@drawable/logo_negro</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Design.Light.BottomSheetDialog</item>

    </style>

    <style name="AppTheme" parent="Theme.AlientoApp">
        <item name="textAppearanceHeadline1">@style/Typography.Mobile.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Typography.Mobile.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Typography.Mobile.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Typography.Mobile.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Typography.Mobile.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Typography.Mobile.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Typography.Mobile.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Typography.Mobile.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Typography.Mobile.Body1</item>
        <item name="textAppearanceBody2">@style/Typography.Mobile.Body2</item>
        <item name="textAppearanceButton">@style/Typography.Mobile.Button</item>
        <item name="textAppearanceCaption">@style/Typography.Mobile.Caption</item>
        <item name="textAppearanceOverline">@style/Typography.Mobile.Overline</item>

        <item name="shapeAppearanceLargeComponent">@style/Shape.Mobile.Large</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Mobile.Medium</item>
        <item name="shapeAppearanceSmallComponent">@style/Shape.Mobile.Small</item>

        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <!-- Splashscreen-->
    <style name="AppTheme.Splashscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="themed_icon">@drawable/logo_negro</item>
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <!-- Base specific-->

    <!-- App Theme-->
    <style name="Base.Theme.AlientoApp" parent="Platform.Theme.AlientoApp">
        <!-- Customize your theme here. -->
    </style>


    <!-- Platform specific-->

    <!-- App Theme-->
    <style name="Platform.Theme.AlientoApp" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

</resources>